<view class="container">
  <view class="index">
    <view class="header">商品详情修改</view>
    <view class="number">
      <text>货到编号：</text>
      <input type="text" />
    </view>
    <view class="name">
      <text>商品名称：</text>
      <input type="text" />
    </view>
    <view class="brand">
      <text>商品品牌：</text>
      <input type="text" />
    </view>
    <view class="norms">
      <text>商品规格：</text>
      <input type="text" />
    </view>
    <view class="price">
      <text>销售价(元)：</text>
      <input type="text" />
    </view>
    <view class="costPrice">
      <text>成本价(元)：</text>
      <input type="text" />
    </view>
    <view class="sale">
      <text>是否销售：</text>
      <picker bindchange="sale" value="{{index}}" range="{{array}}">
        <view class="picker">
      {{array[index]}}
        </view>
      </picker>
    </view>
    <view class="defaultStock">
      <text>默认库存：</text>
      <input type="text" />
    </view>
    <view>
      <button type="default" class="bg-green" hover-class="bg-green-hover">重置</button>
      <button type="default" class="bg-blue" hover-class="bg-blue-hover">确认</button>
    </view>
  </view>
</view>